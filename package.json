{
  "name": "fastify-starter-kit",
  "version": "0.1.0",
  "description": "Template for Node.js projects with pre-built fastify setup.",
  "main": "./src/index.ts",
  "types": "./types/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "node src/index.ts",
    "dev": "node --watch src/index.ts | pino-pretty --ignore serviceContext",
    "dc:dev": "docker compose -f ./infra/docker/docker-compose.yml -f ./infra/docker/docker-compose.dev.yml up",
    "dc:dev:down": "docker compose -f ./infra/docker/docker-compose.yml -f ./infra/docker/docker-compose.dev.yml down",
    "dc:monitoring": "docker compose -f ./infra/docker/docker-compose.yml -f ./infra/docker/docker-compose.monitoring.yml up",
    "dc:monitoring:down": "docker compose -f ./infra/docker/docker-compose.yml -f ./infra/docker/docker-compose.monitoring.yml down",
    "dc:infra": "docker compose -f ./infra/docker/docker-compose.yml up",
    "dc:infra:down": "docker compose -f ./infra/docker/docker-compose.yml down",
    "db:generate": "drizzle-kit generate --config=infra/database/drizzle.config.js",
    "db:push": "drizzle-kit push --config=infra/database/drizzle.config.js",
    "db:push:test": "drizzle-kit push --config=infra/database/drizzle.config.js --force",
    "db:migrate": "drizzle-kit migrate --config=infra/database/drizzle.config.js",
    "db:seed": "node scripts/database/seed.script.js",
    "db:seed:dev": "node scripts/database/seed.script.js development",
    "db:seed:test": "node scripts/database/seed.script.js test",
    "db:reset": "pnpm db:drop && pnpm db:push && pnpm db:migrate && pnpm db:seed:dev",
    "db:studio": "drizzle-kit studio --config=infra/database/drizzle.config.js --port 3000",
    "db:check": "drizzle-kit check --config=infra/database/drizzle.config.js",
    "db:drop": "drizzle-kit drop --config=infra/database/drizzle.config.js",
    "db:up": "drizzle-kit up --config=infra/database/drizzle.config.js",
    "db:introspect": "drizzle-kit introspect --config=infra/database/drizzle.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:fix": "prettier --write 'src/**/*.{js,cjs,ts}' & prettier --write 'infra/**/*.{js,cjs,ts}' & prettier --write 'tests/**/*.{js,cjs,ts}' & prettier --write 'scripts/**/*.{js,cjs}'",
    "prepare": "husky",
    "test": "ENV_NAME=test c8 node --test",
    "test:unit": "ENV_NAME=test node --test tests/unit",
    "test:integration": "ENV_NAME=test node --test tests/integration",
    "test:e2e": "ENV_NAME=test node --test tests/e2e",
    "precommit": "lint-staged",
    "prepush": "pnpm lint",
    "check:types": "tsc --project tsconfig.json",
    "check:types:watch": "tsc --project tsconfig.json --watch",
    "check:env": "node scripts/env/validate-env.ts",
    "check:dep": "depcheck",
    "deps:validate": "depcruise src --config .dependency-cruiser.cjs",
    "check": "pnpm check:types && pnpm lint",
    "generate": "plop",
    "git:amend": "git add . && git commit --amend --no-edit"
  },
  "author": {
    "name": "Taras Ivaniuk",
    "url": "https://github.com/256Taras"
  },
  "license": "MIT",
  "engines": {
    "node": ">=25.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm run prettier:fix",
      "pnpm run lint:fix"
    ]
  },
  "imports": {
    "#*": "./src/*",
    "#tests/*": "./tests/*"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.4",
    "@fastify/autoload": "^6.3.1",
    "@fastify/awilix": "^8.2.0",
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/request-context": "^6.2.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@sinclair/typebox": "^0.34.45",
    "ajv": "^8.12.0",
    "awilix": "^12.0.5",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.0",
    "drizzle-typebox": "^0.3.3",
    "env-schema": "^7.0.0",
    "fastify": "^5.6.2",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.1.0",
    "pino": "^10.1.0",
    "postgres": "^3.4.4",
    "rambda": "^9.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.0.6",
    "dependency-cruiser": "^17.3.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "fast-jwt": "^6.1.0",
    "globals": "^15.12.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "pino-pretty": "^9.1.0",
    "plop": "^4.0.4",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
